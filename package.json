{
  "name": "crow",
  "version": "1.0.0",
  "description": "Social media scheduling and publishing system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently -n api,client -c blue,green \"tsx watch src/index.ts\" \"vite --config client/vite.config.ts\"",
    "dev:api": "tsx watch src/index.ts",
    "dev:client": "vite --config client/vite.config.ts",
    "build": "tsc && vite build --config client/vite.config.ts",
    "start": "node dist/index.js",
    "migrate": "knex migrate:latest --knexfile knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.ts"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.21",
    "better-sqlite3": "^11.7.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "knex": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "node-telegram-bot-api": "^0.66.0",
    "twitter-api-v2": "^1.18.2",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.5",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.7"
  }
}
